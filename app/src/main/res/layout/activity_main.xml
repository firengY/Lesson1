<?xml version="1.0" encoding="utf-8"?>
<com.firengy.lesson1.PagerEnabledSlidingPaneLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.firengy.lesson1.MainActivity">

    <android.support.design.widget.NavigationView
        android:id="@+id/menu"
        android:elevation="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start|left"
        app:headerLayout="@layout/header_first_project"
        app:menu="@menu/menu_first_project" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ddd"

        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextColor="#222"
            app:tabSelectedTextColor="@color/colorTabTitle"
            app:tabMode="fixed"
            app:tabBackground="@color/White"
            app:tabIndicatorColor="@color/colorTabTitle"
            app:tabIndicatorHeight="4dp"
            android:id="@+id/table_content"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

</com.firengy.lesson1.PagerEnabledSlidingPaneLayout>
