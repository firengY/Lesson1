        android:id="@+id/text_header"
        android:layout_below="@id/image_header"
        android:text="杨哥"
        android:layout_alignLeft="@id/image_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>